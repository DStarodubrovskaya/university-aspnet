@page
@model TaskManagerDariaSt.Pages.UsersModel
<h1 class="text-center mb-4">Manage Users</h1>
<div class="d-flex justify-content-center flex-wrap gap-5">
	<!--Left side: Add-->
	<div class="d-flex flex-column gap-3" style="min-width: 300px;">
		<h3>Add User</h3>
		<form method="post" asp-page-handler="Add" class="d-flex flex-column gap-2">
			<label asp-for="user.FirstName"></label>
			<input asp-for="user.FirstName" type="text" class="form-control form-control-sm" required />
		
			<label asp-for="user.LastName"></label>
			<input asp-for="user.LastName" type="text" class="form-control form-control-sm" required />
		
			<label asp-for="user.Email"></label>
			<input asp-for="user.Email" type="email" class="form-control form-control-sm" required />
		
			<button class="btn btn-primary btn-sm">Add User</button>
		</form>
		<!-- Result message after adding -->
		<p>@TempData["AddResult"]</p>
	</div>

	<!--Right side: Delete-->
	<div class="d-flex flex-column gap-3" style="min-width: 300px;">
		<h3>Delete User</h3>
		<form method="post" asp-page-handler="Delete" class="d-flex flex-column gap-2">
			<!-- Dropdown with user list -->
			<select asp-for="user.Id" class="form-control form-control-sm">
				<option value="">Pick One</option>
				@foreach (var user in Model.Users)
				{
					<option value="@user.Id">@user.FirstName @user.LastName</option>
				}
			</select>
		
			<button class="btn btn-primary btn-sm">Delete User</button>
		</form>
		<!-- Result message after deletion -->
		<p>@TempData["DeleteResult"]</p>
	</div>
</div>
<!-- Back to main menu button -->
<div class="text-center">
	<p class="mt-3">
		<a href="/Index" class="btn btn-outline-primary">Back to Main Menu</a>
	</p>
</div>

