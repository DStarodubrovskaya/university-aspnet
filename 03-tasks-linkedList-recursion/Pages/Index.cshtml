@page
@model TaskSchedulerDariaSt.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div style ="display:flex; flex-direction:column; align-items:center; justify-content:center; min-height:80vh; gap:20px;">
	<h1 style="margin:0 0 20px; font-weight:700;">Welcome to Task Scheduler</h1>

    <!-- User Login -->
	
	<h3 style="margin:10px;">Please Select User</h3>

	<form method="post" asp-page-handler="Select" style="display:flex; flex-direction:column; gap:12px; align-items:center;">
		<label for="userSelect" style="font-weight:600;">Users</label>
		<select id="userSelect" asp-for="user.Id" style="padding:6px; border:1px solid #ccc; border-radius:6px; min-width:180px;">
			<option value="">Pick One</option>
			@foreach (var user in Model.Users)
			{
				<option value="@user.Id">@user.UserName</option>
			}
		</select>

		<button style="padding:6px 10px; background:#1e66f5; color:#fff; border-radius:6px; border:none; cursor:pointer;">
			Show My Tasks
		</button>
	</form>
	<!-- Link to add a new user -->
	<div>
		<a href="/AddUser" style="padding:6px 12px; border-radius:4px; color:#1e66f5;">
			Add or Delete User
		</a>
	</div>
    
</div>
